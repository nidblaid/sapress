            <xpath expr="//field[@name='user_id']" position="after">
                <field name="analytic_account_id" options="{'no_create': True}"/>
            </xpath>

        </field>
    </record>
    <record id="al_crm_team_view_form_inherit_twizza" model="ir.ui.view">
        <field name="name">al.crm.team.view.form.inherit.twizza</field>
        <field name="model">crm.team</field>
        <field name="inherit_id" ref="sales_team.crm_team_view_form"/>
        <field name="arch" type="xml">
                <!-- Add your fields and other view components here -->
                <field name='name' position="attributes">
                    <attribute name="readonly">0</attribute>
                </field>
        </field>
    </record>

</odoo>
