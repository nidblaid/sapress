<odoo>

    <record id="partner_inwi_destination_view_form" model="ir.ui.view">
        <field name="name">partner.inwi.destination.form</field>
        <field name="model">partner.inwi.destination</field>
        <field name="arch" type="xml">
                <form string="Partner Inwi Destination">
                    <sheet>
                    <group>
                        <group>
                <field name="partner_id"/>
                <field name="ville_id" domain="[('type', '=', 'client_final')]"
                widget="many2many_tags"/>
                <!-- <field name="exp_destination_id" domain="[('type', '=', 'agence')]"/> -->
                        </group>                                                    
                    </group>
                    </sheet>
                 <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
        </field>
    </record>



    <record id="partner_inwi_destination_view_tree" model="ir.ui.view">
        <field name="name">partner.inwi.destination.tree</field>
        <field name="model">partner.inwi.destination</field>
        <field name="arch" type="xml">
            <tree string="Partner Inwi Destination">
                <field name="partner_id"/>
                <field name="ville_id" widget="many2many_tags"/>
                <!-- <field name="exp_destination_id"/> -->
            </tree>
        </field>
    </record>


    <record model="ir.actions.act_window" id="partner_inwi_destination_action">
      <field name="name">Partner Inwi Destination</field>
      <field name="res_model">partner.inwi.destination</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="partner_inwi_destination_menu" name="Table de corespondance (INWI)"
              parent="sochepress_base.sochepress_base_settings_menu"
              action="partner_inwi_destination_action" sequence="8"/>

    <!-- __________________________ Ville destination __________________________ -->

    <record id="ville_inwi_correspondence_view_form" model="ir.ui.view">
        <field name="name">ville.inwi.correspondence.form</field>
        <field name="model">ville.inwi.correspondence</field>
        <field name="arch" type="xml">
                <form string="Ville Inwi Correspondence">
                    <sheet>
                    <group>
                        <group>
                <field name="ville_inwi"/>
                <field name="ville_sapress" domain="[('type', '=', 'client_final')]" />
                        </group>
                    </group>
                    </sheet>
                 <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
                </form>
        </field>
    </record>



    <record id="ville_inwi_correspondence_view_tree" model="ir.ui.view">
        <field name="name">ville.inwi.correspondence.tree</field>
        <field name="model">ville.inwi.correspondence</field>
        <field name="arch" type="xml">
            <tree string="Ville Inwi Correspondence">
                <field name="ville_inwi"/>
                <field name="ville_sapress"/>
            </tree>
        </field>
    </record>


    <record model="ir.actions.act_window" id="ville_inwi_correspondence_action">
      <field name="name">Ville Inwi Correspondence</field>
      <field name="res_model">ville.inwi.correspondence</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="ville_inwi_correspondence_menu" name="Ville de corespondance (INWI)"
              parent="sochepress_base.sochepress_base_settings_menu"
              action="ville_inwi_correspondence_action" sequence="8"/>



</odoo>
