<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="kzm_account_res_config_settings_view_form" model="ir.ui.view">
        <field name="name">kzm.res.config.settings.view.form.inherit.account</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='account']" position="inside">
                <h2>Reporting</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="kzm_amount_letter_invoicing"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="kzm_amount_letter_invoicing"/>
                            <div class="text-muted">
                                show the total amount letter
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="kzm_code_designation_invoicing"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="kzm_code_designation_invoicing"/>
                            <div class="text-muted">
                                split the description to code / designation
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="kzm_taxe_invoicing"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="kzm_taxe_invoicing"/>
                            <div class="text-muted">
                                show the column taxe
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="kzm_discount_invoicing"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="kzm_discount_invoicing"/>
                            <div class="text-muted">
                                show the total discount
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="kzm_object_invoicing"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="kzm_object_invoicing"/>
                            <div class="text-muted">
                                show the quotation object
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="kzm_bank_invoicing"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="kzm_bank_invoicing"/>
                            <div class="text-muted">
                                show the bank informations
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="kzm_numbering_invoicing"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="kzm_numbering_invoicing"/>
                            <div class="text-muted">
                                Show the column numbering
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="group_without_header_footer_account"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="group_without_header_footer_account"/>
                            <div class="text-muted">
                                Print Report Without Header and Footer
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
