        <template id="report_colis_barcode_zpl">
            <t t-foreach="docs" t-as="colis">
                <t t-translation="off">
                    ^XA
                    ^FO20,10
                    ^A0N,25,25^FDExpediteur^FS
                    ^FO310,10
                    ^A0N,25,25^FDDestinataire^FS
                    ^FO10,40
                    ^A0N,20,20^FD<t t-esc="colis.expeditor_id.display_name" t-if="colis.expeditor_id"/>^FS
                    ^FO10,70
                    ^A0N,20,20^FD<t t-esc="colis.expeditor_id.street" t-if="colis.expeditor_id.street"/>^FS
                    ^FO20,100
                    ^A0N,30,30^FD<t t-esc="colis.source_id.name" t-if="colis.source_id"/>^FS
                    ^FO300,40
                    ^A0N,20,20^FD<t t-esc="colis.destinator_id.display_name" t-if="colis.destinator_id"/>^FS
                    ^FO300,70
                    ^A0N,20,20^FD<t t-esc="colis.destinator_id.street" t-if="colis.destinator_id.street"/>^FS
                    ^FO310,100
                    ^A0N,30,30^FD<t t-esc="colis.destination_id.name" t-if="colis.destination_id"/>^FS
                    ^FO10,130^BY3
                    <t t-if="colis.barcode">
                        ^BCN,100,Y,N,N
                        ^FD<t t-esc="colis.barcode"/>^FS
                    </t>
                    ^FO10,270
                    ^A0N,20,20^FDType:^FS
                    ^FO60,270
                    ^A0N,20,20^FD<t t-esc="colis.type_colis_id.name" t-if="colis.type_colis_id"/>^FS
                    ^FO110,270
                    ^A0N,20,20^FDPoids:^FS
                    ^FO170,270
                    ^A0N,20,20^FD<t t-esc="str(colis.weight)+'Kg'"/>^FS
                    ^FO260,270
                    ^A0N,20,20^FDN Colis:^FS
                    ^FO330,270
                    ^A0N,20,20^FD<t t-esc="colis.name"/>^FS
                    ^FO450,270
                    ^A0N,20,20^FDN Demande^FS
                    ^FO500,270
                    ^A0N,20,20^FD<t t-esc="colis.request_id.name"/>^FS
                    ^FO500,270
                    ^A0N,20,20^FDRéférence externe^FS
                    ^FO500,270
                    ^A0N,20,20^FD<t t-esc="colis.ref_ext" t-if="colis.ref_ext"/>^FS
                    ^XZ
                </t>
            </t>
        </template>

