        <template id="qr_report_colis_barcode_dix">
            <t t-call="web.html_container">
                <div t-foreach="docs" class="page article" t-as="o">
                    <div class="row">
                        <div class="col-12">
                            <div class="row text-center">
                                <div class="col-12">
                                    <img
                                        t-att-src="'/report/qr/?value=%s&amp;error_correction=%s' % (o._generate_my_qr_code(), 3)"
                                        style="width:80%"/>

                                </div>
                            </div>
                            <div class="row">
                                <i>Sapress logistique et messagerie, 0522589898/99, service-client@sapress.ma</i>
                                <br/>
                                <i>SAPRESS livre vos clients partout au Maroc.</i>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>


        <report
            string="Colis QR Code (PDF)"
            id="qr_action_report_colis_barcode_dix"
            model="sochepress.customer.request.line"
            report_type="qweb-pdf"
            name="sochepress_base.qr_report_colis_barcode_dix"
            file="sochepress_base.qr_report_colis_barcode_dix"
            paperformat="sochepress_base.qr_custom_paysage"
            print_report_name="'Colis barcode - %s' % (object.name)"
        />

