<odoo>
    <data>


        <template id="report_ot_barcode">
            <t t-call="web.html_container">
                <div t-foreach="[docs[x:x+4] for x in range(0, len(docs), 4)]"
                     t-as="page_docs" class="page article">
                    <t t-foreach="page_docs" t-as="o">
                        <t t-set="content" t-value="o.sudo().name"/>
                        <img class="barcode"
                             t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s&amp;humanreadable=1' % ('Code128', content, 600, 100)"
                             alt="Barcode"/>
                    </t>
                </div>
            </t>
        </template>

        <report
            string="Transport Order Barcode (PDF)"
            id="action_report_ot_barcode"
            model="soch.transport.order"
            report_type="qweb-pdf"
            name="sochepress_base.report_ot_barcode"
            file="sochepress_base.report_ot_barcode"
            print_report_name="'Transport order barcode - %s' % (object.name)"
        />
        <record id="custom_paysage_be" model="report.paperformat">
            <field name="name">Format paysage pour BE</field>
            <field name="default" eval="True"/>
            <field name="format">custom</field>
            <field name="page_height">73</field>
            <field name="page_width">73</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">5</field>
            <field name="margin_bottom">1</field>
            <field name="margin_left">1</field>
            <field name="margin_right">1</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">5</field>
            <field name="dpi">90</field>
        </record>

  <template id="report_bee">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="o" t-value="o.sudo()"/>
                    <div class="page article">
                        <div class="header">
                            <div class="row">
                                <div class="col-6">
                                    <img t-if="o.sudo().company_id.logo"
                                         t-att-src="image_data_uri(o.company_id.logo)"
                                         style="max-height: 50px;"
                                         alt="Logo"/>
                                </div>
                            </div>
                        </div>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <div class="row">
                            <div class="col-4">
                                <strong>Type d'expédition:</strong>
                                <span t-esc="o.sudo().transport_type"/>
                            </div>
                            <div class="col-4">
                                <strong>Numéros d'expédition:</strong>
                                <span t-esc="o.sudo().name"/>
                            </div>
                            <div class="col-4">
                                <strong>Date d'expédition:</strong>
                                <span t-esc="o.sudo().date"/>
                            </div>

                        </div>
                        <div class="row">
                            <div class="col-4">
                                <strong>Source: </strong>
                                <span t-esc="o.sudo().source_id.name"/>
                            </div>
                            <div class="col-4">
                                <strong>Destination:</strong>
                                <span t-esc="o.sudo().destination_id.name"/>
                            </div>
                                                      <div class="col-4">
                                <strong>Nombre de colis: </strong>
                                <span t-esc="o.sudo().nbre_colis"/>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col-4">
                                <strong>Total à retourner: </strong>
                                <span t-esc="o.sudo().returned_amount"/>
                            </div>
                            <div class="col-4">
                                <strong>Nom du chauffeur:</strong>
                                <span t-esc="o.sudo().driver_id.name"/>
                            </div>
                            <div class="col-4">
                                <strong>Immatriculation:</strong>
                                <span t-esc="o.sudo().vehicule_id.license_plate"/>
                            </div>

                        </div>

                        <br/>
                        <br/>
                        <h3>Liste de colis</h3>
                        <br/>
                        <table class="table table-sm o_main_table">
                            <thead>
                                <tr>
                                    <td class="text-center">
                                        <strong>Numéros de déclaration</strong>
                                    </td>
                                    <td class="text-center">
                                        <strong class="text-center">Type </strong>
                                    </td>
                                    <td class="text-center">
                                        <strong class="text-center">Source</strong>
                                    </td>
                                    <td class="text-center">
                                        <strong>Destination</strong>
                                    </td>
                                    <td class="text-center">
                                        <strong class="text-center">montant à retourner</strong>
                                    </td>
                                    <td class="text-center">
                                        <strong class="text-center">Remarque</strong>
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.colis" t-as="col">
                                    <td class="text-center">
                                        <span t-esc="col.name"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="col.type_colis_id.name"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="col.source_id.name"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="col.destination_id.name"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="col.return_amount"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="col.notes"/>
                                    </td>

                                </tr>
                            </tbody>
                        </table>
                        <br/>
                        <br/>
                        <br/>
                        <br/>
                        <div class="row" style="height:200px !important;">
                            <div class="col-4">
                                <table class="table table-bordered" style="height:140px !important;">
                                    <thead>
                                        <tr>
                                            <td class="text-center">
                                        <strong>VISA PLATEFORME SOURCE</strong>
                                            </td>
                                        </tr>
                                    </thead>
                                    <tbody style="height:140px !important;">
                                        <tr>
                                    <td class="text-center">

                                    </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-4">
                              <table class="table table-bordered" style="height:140px !important;">
                                    <thead>
                                        <tr>
                                            <td class="text-center">
                                        <strong>VISA CHAUFFEUR</strong>
                                            </td>
                                        </tr>
                                    </thead>
                                    <tbody style="height:140px !important;">
                                        <tr>
                                    <td class="text-center">

                                    </td>
                                        </tr>
                                    </tbody>
                                </table>

                            </div>
                            <div class="col-4">
                                  <table class="table table-bordered" style="height:140px !important;">
                                    <thead>
                                        <tr>
                                            <td class="text-center">
                                        <strong>VISA PLATEFORME DESTINATION</strong>
                                            </td>
                                        </tr>
                                    </thead>
                                    <tbody style="height:140px !important;">
                                        <tr>
                                    <td class="text-center">

                                    </td>
                                        </tr>
                                    </tbody>
                                </table>

                            </div>
                        </div>
                    </div>

                </t>
            </t>
        </template>


        <!-- bon expédition -->
 <template id="report_bee_exp">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-set="o" t-value="o.sudo()"/>
                    <div class="page article">
                        <div class="row">
                            <div class="col-6">
                                <!-- <img t-if="o.sudo().company_id.logo"
                                        t-att-src="image_data_uri(o.company_id.logo)"
                                        style="max-height: 50px;"
                                        alt="Logo"/>-->
                                <img src="sochepress_base/static/src/img/logo_sapress.png"
                                         style="max-height: 80px;"
                                         alt="Logo"/>
                            </div>
                            <div class="col-6" style="text-align:right;font-size:14px;">
                                <strong>Date Edition :   </strong>
                                <span t-esc="context_timestamp(datetime.datetime.now()).strftime('%Y-%m-%d %H:%M')"/>
                            </div>
                            </div>
                        <div class="row" >
                            <div class="col-12 text-center" style="background-color:#DCDCDC;font-size: 24px;
                                                       font-weight:500;text-transform: uppercase;">
                                <strong>Bon d'expédition N° </strong>
                                <span t-esc="o.sudo().name"/>
                            </div>
                        </div>
                         <div class="row" style="font-size:14px;">
                            <div class="col-6">
                                <strong>Site d'origine : </strong>
                                <span t-esc="o.sudo().source_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Site de destination :</strong>
                                <span t-esc="o.sudo().destination_id.name"/>
                            </div>
                         </div>
                        <div class="row" style="font-size:14px;">
                            <div class="col-6">
                                <span>Type de transport :</span>
                                <span t-esc="o.sudo().transport_type"/>
                            </div>
                        </div>
                         <div class="row" style="font-size:14px;">
                            <div class="col-6">
                                <span>Transporteur :</span>
                                <span t-esc="o.sudo().driver_id.name"/>
                            </div>
                         </div>
                         <div class="row" style="font-size:14px;">
                             <div class="col-6">
                                <span>Véhicule :</span>
                                <span t-esc="o.sudo().vehicule_id.license_plate"/>
                            </div>
                         </div>
                        <div class="row" style="font-size:14px;">
                            <div class="col-6">
                                <strong>Heure de départ : --------------</strong>
                            </div>
                            <div class="col-6">
                                <strong>Heure d'arrivée : ---------------</strong>
                            </div>
                        </div>
                        <br/>
                        <table class="table-bordered" style="font-size:14px;width:100%;">
                            <thead>
                                <tr>
                                    <td class="text-center" style="background-color:#DCDCDC !important;">
                                        <strong>Numéros de colis</strong>
                                    </td>
                                    <td class="text-center" style="background-color:#DCDCDC !important;">
                                        <strong class="text-center">Type de colis </strong>
                                    </td>
                                    <td class="text-center" style="background-color:#DCDCDC !important;">
                                        <strong class="text-center">N° Demande</strong>
                                    </td>
                                    <td class="text-center" style="background-color:#DCDCDC !important;">
                                        <strong>Destination final</strong>
                                    </td>
                                    <td class="text-center" style="background-color:#DCDCDC !important;">
                                        <strong class="text-center">Code à Barrer</strong>
                                    </td>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.colis" t-as="col">
                                    <td class="text-center">
                                        <span t-esc="col.name"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="col.type_colis_id.name"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="col.request_id.name"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="col.destination_id.name"/>
                                    </td>
                                    <td class="text-center">
                                        <span t-esc="col.barcode"/>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                        <table class="table-bordered" style="font-size:14px;width:100%;">
                            <tfoot>
                                <tr >
                                    <td colspan="2" class="text-center">Nombre de Colis :
                                        <span t-esc="o.sudo().nbre_colis"/>
                                    </td>
                                    <td class="text-center">
                                        Volume :
                                        <t t-set="sum_volume" t-value="0"/>
                                        <t t-foreach="o.colis" t-as="line">
                                            <t t-set="sum_volume" t-value="sum_volume+line.volume"/>
                                        </t>
                                        <t t-esc="'%.2f'% sum_volume"/>
                                    </td>
                                    <td class="text-center">
                                        Poids :
                                        <t t-set="sum_weight" t-value="0"/>
                                        <t t-foreach="o.colis" t-as="line">
                                            <t t-set="sum_weight" t-value="sum_weight+line.weight"/>
                                        </t>
                                        <t t-esc="'%.2f'% sum_weight"/>
                                    </td>
                                </tr>
                            </tfoot>
                        </table>
                        <br/>
                        <div class="row" style="height:200px !important;">
                            <div class="col-4">
                                <table class="table table-bordered" style="height:140px !important;">
                                    <tbody style="height:140px !important;">
                                        <tr style="height:40px !important;">
                                            <td class="text-center" style="font-size:14px;">
                                        <strong>VISA PLATEFORME SOURCE</strong>
                                            </td>
                                        </tr>
                                        <tr>
                                    <td class="text-center">
                                    </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="col-4">
                              <table class="table table-bordered" style="height:140px !important;">
                                    <tbody style="height:140px !important;">
                                        <tr style="height:40px !important;">
                                            <td class="text-center" style="font-size:14px;">
                                        <strong>VISA CHAUFFEUR</strong>
                                            </td>
                                        </tr>
                                        <tr>
                                    <td class="text-center">
                                    </td>
                                        </tr>
                                    </tbody>
                                </table>

                            </div>
                            <div class="col-4">
                                  <table class="table table-bordered" style="height:140px !important;">
                                    <tbody style="height:140px !important;">
                                         <tr style="height:40px !important;">
                                            <td class="text-center" style="font-size:14px;">
                                        <strong>VISA PLATEFORME DESTINATION</strong>
                                            </td>
                                        </tr>
                                        <tr>
                                    <td class="text-center">
                                    </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="footer o_clean_footer">
                                <div class="text-center">
                                    <span class="page"/>
                                    /
                                    <span class="topage"/>
                                </div>
                            </div>
                    </div>
                </t>
            </t>
        </template>

        <!-- finn -->

        <report
                string="Bon d'enlèvement (PDF)"
                id="action_report_be_2"
                model="soch.transport.order"
                report_type="qweb-pdf"
                name="sochepress_base.report_bee"
                file="sochepress_base.report_bee"
                paperformat="base.paperformat_euro"
        />

        <report
                string="Bon d'expédition (PDF)"
                id="action_report_be_2_exp"
                model="soch.transport.order"
                report_type="qweb-pdf"
                name="sochepress_base.report_bee_exp"
                file="sochepress_base.report_bee_exp"
                paperformat="base.paperformat_euro"
        />

        

    </data>
</odoo>
