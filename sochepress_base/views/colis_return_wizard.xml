<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="colis_return_wizard_form" model="ir.ui.view">
            <field name="name">colis.return.wizard.form</field>
            <field name="model">colis.return.wizard</field>
            <field name="arch" type="xml">
                <form string="Return Colis">
                    <sheet>
                        <group col="1">
                            <p class="oe_grey">
                                <h4>
                                    Please check the colis to be returned
                                </h4>
                            </p>
                            <group col="5" colspan="5">
                                <field name="colis_ids" nolabel="1">
                                    <tree string="Colis" create="0" editable="top">
                                        <field name="name" string="Code" readonly="1"/>
                                        <field name="expeditor_id" readonly="1"/>
                                        <field name="source_id" readonly="1"/>
                                        <field name="destinator_id" readonly="1"/>
                                        <field name="destination_id" readonly="1"/>
                                        <field name="step" readonly="1"/>
                                        <field name="delivery_delay_reason_id"
                                               options="{'no_create': True, 'no_edit': True}"/>
                                        <field name="is_to_return"/>
                                    </tree>
                                </field>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Return" type="object" class="btn-primary" name="create_copy"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
