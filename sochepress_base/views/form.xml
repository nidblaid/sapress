<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <record id="customer_request_line_form_view_inh2" model="ir.ui.view">
        <field name="name">sochepress.customer.request.line.form2</field>
        <field name="model">sochepress.customer.request.line</field>
        <field name="arch" type="xml">
            <form create="false">
                <header>
                    <button name="livrer2" type="object" class="oe_highlight"
                            string="DELIVER"/>
                    <button name="refuse" type="object"
                            string="RETURN"
                            class="oe_highlight"/>
                    <button name="non_delivered" type="object"
                            string="NON LIVERED"
                            class="oe_highlight"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" force_save="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="expeditor_id" readonly="1"/>
                            <field name="destinator_id" readonly="1"/>
                            <field name="type_colis_id" readonly="1"/>
                            <field name="delivery_delay_reason_id" options="{'no_create': True, 'no_edit': True}"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="email_template_form_inherit" model="ir.ui.view">
        <field name="name">mail.template.form</field>
        <field name="model">mail.template</field>
        <field name="inherit_id" ref="mail.email_template_form"/>
        <field name="arch" type="xml">
            <field name="scheduled_date" position="after">
                <field name="doc_type_ids"/>
            </field>
        </field>
    </record>

    <record model="ir.actions.server" id="update_product">
        <field name="name">Mettre a jour les articles</field>
        <field name="model_id" ref="product.model_product_template"/>
        <field name="state">code</field>
        <field name="binding_model_id"
               ref="product.model_product_template"/>
        <field name="code">
            records.update_product()
        </field>
    </record>

