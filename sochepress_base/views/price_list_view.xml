<odoo>
    <data>
        <record id="soch_price_liste_form_view" model="ir.ui.view">
            <field name="name">soch.price.list.form</field>
            <field name="model">soch.price.list</field>
            <field name="arch" type="xml">
                <form string="Price list">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="see_price_rule"
                                    class="oe_stat_button"
                                    string="Price Rule"
                                    type="object"
                                    icon="fa-dollar">
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>


                        <!--                        <notebook>-->
                        <!--                            <page name="rate" string="Rate">-->
                        <!--                                <field name="price_list_ids" nolabel="1"/>-->

                        <!--                            </page>-->
                        <!--                        </notebook>-->
                    </sheet>
                </form>
            </field>
        </record>


        <record id="view_delivery_price_rule_form" model="ir.ui.view">
            <field name="name">soch.price.list.rule.form</field>
            <field name="model">soch.price.list.rule</field>
            <field name="arch" type="xml">
                <form string="Price Rules">
                    <group>
                        <field name="name" invisible="1"/>
                    </group>
                    <group>
                        <group>
                            <field name="source_id" required="1"/>
                        </group>
                        <group>
                            <field name="destination_id" required="1"/>
                        </group>
                    </group>
                    <group>
                        <label for="variable" string="Condition"/>
                        <div class="o_row">
                            <field name="variable"/>
                            <span class="oe_inline">
                                Between
                            </span>
                            <field name="min_value" class="oe_inline" nolabel="1"/>
                            <span class="oe_inline">
                                And
                            </span>
                            <field name="max_value" class="oe_inline" nolabel="1"/>
                        </div>
                        <label for="price" string="Delivery Cost"/>
                        <div>
                            <field name="price" class="oe_inline"/>
                        </div>
                    </group>
                    <group>
                        <label for="demand_type" string="SLA"/>
                        <div class="o_row">
                            <!--                            <span class="oe_inline">-->
                            <!--                                Type de messagerie-->
                            <!--                            </span>-->
                            <field name="demand_type" required="1"/>
                            <span class="oe_inline">
                                Between
                            </span>
                            <field name="duration_min" required="1" class="oe_inline"
                                   nolabel="1"/>
                            <span class="oe_inline">
                                And
                            </span>
                            <field name="duration_max" required="1" class="oe_inline"
                                   nolabel="1"/>
                            <span class="oe_inline">
                                Heures
                            </span>
                        </div>
                    </group>
                </form>
            </field>
        </record>
        <record id="view_delivery_price_rule_tree" model="ir.ui.view">
            <field name="name">soch.price.list.rule.tree</field>
            <field name="model">soch.price.list.rule</field>
            <field name="arch" type="xml">
                <tree string="Price Rules" default_order="create_date desc">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record model="ir.actions.act_window" id="soche_price_liste_action">
            <field name="name">Price List</field>
            <field name="res_model">soch.price.list</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record model="ir.actions.act_window" id="soche_price_rule_action">
            <field name="name">Price List</field>
            <field name="res_model">soch.price.list.rule</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>
