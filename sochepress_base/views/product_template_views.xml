<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sochpress_product_template_form_inherit" model="ir.ui.view">
        <field name="name">product.template.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='group_general']//field[@name='type']" position="after">
                <field name="is_modele_colis"/>
                <field name="type_colis_id" attrs="{'invisible': [('is_modele_colis', '=', False)]}"/>
                <field name="default_code_soch" attrs="{'invisible': [('is_modele_colis', '!=', True)]}"/>
                <field name="client_id" attrs="{'invisible': [('is_modele_colis', '!=', True)]}"/>
                <field name="designation_chez_client" attrs="{'invisible': [('is_modele_colis', '!=', True)]}"/>
            </xpath>
            <xpath expr="//group[@name='group_lots_and_weight']//label[@for='weight']" position="before">
                <label for="height" attrs="{'invisible': [('is_modele_colis', '!=', True)]}"/>
                <div class="o_row" name="height" attrs="{'invisible': [('is_modele_colis', '!=', True)]}">
                    <field name="height" string="Height"/>
                    <span>
                        cm
                    </span>
                </div>
                <label for="width" attrs="{'invisible': [('is_modele_colis', '!=', True)]}"/>
                <div class="o_row" name="width" attrs="{'invisible': [('is_modele_colis', '!=', True)]}">
                    <field name="width" string="Width"/>
                    <span>
                        cm
                    </span>
                </div>
                <label for="length" attrs="{'invisible': [('is_modele_colis', '!=', True)]}"/>
                <div class="o_row" name="length" attrs="{'invisible': [('is_modele_colis', '!=', True)]}">
                    <field name="length" string="Length"/>
                    <span>
                        cm
                    </span>
                </div>
                <label for="weight_vol" attrs="{'invisible': [('is_modele_colis', '!=', True)]}"/>
                <div class="o_row" name="weight_vol" attrs="{'invisible': [('is_modele_colis', '!=', True)]}">
                    <field name="weight_vol" string="Weight volumetric"/>
                    <span>
                        kg
                    </span>
                </div>
                <label for="colis_pourtour" attrs="{'invisible': [('is_modele_colis', '!=', True)]}"/>
                <div class="o_row" name="colis_pourtour" attrs="{'invisible': [('is_modele_colis', '!=', True)]}">
                    <field name="colis_pourtour" string="Colis pourtour"/>
                    <span>
                        cm
                    </span>
                </div>
                <field name="is_conform" attrs="{'invisible': [('is_modele_colis', '!=', True)]}"/>
            </xpath>
        </field>
    </record>

    <record id="sochepress_colis_modeles" model="ir.actions.act_window">
        <field name="name">Colis models</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="context">{'default_is_modele_colis': True}</field>
        <field name="domain">[('is_modele_colis', '=', True)]</field>
    </record>
</odoo>
