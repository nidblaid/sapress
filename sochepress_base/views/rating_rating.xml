<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="rating_rating_view_form_inherited" model="ir.ui.view">
        <field name="name">rating.rating.form</field>
        <field name="model">rating.rating</field>
        <field name="inherit_id" ref="rating.rating_rating_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <button string="TEST" type="object" class="btn-primary"
                        name="get_colis"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="destinator_id"/>
            </xpath>
        </field>
    </record>
    <record id="rating_rating_pivot_view_customer" model="ir.ui.view">
        <field name="name">rating.rating.pivot.customer</field>
        <field name="model">rating.rating</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="partner_id" type="row"/>
                <field name="rating_text" type="col"/>
            </pivot>
        </field>
    </record>
    <record id="rating_rating_pivot_view_destinator" model="ir.ui.view">
        <field name="name">rating.rating.pivot.destinator</field>
        <field name="model">rating.rating</field>
        <field name="arch" type="xml">
            <pivot>
                <field name="destinator_id" type="row"/>
                <field name="rating_text" type="col"/>
            </pivot>
        </field>
    </record>


    <record model="ir.actions.act_window" id="rating_rating_report_action">
        <field name="name">Customer evaluation</field>
        <field name="res_model">rating.rating</field>
        <field name="domain">[
            ('res_model', '=', 'sochepress.customer.request.line')]
        </field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'pivot', 'view_id': ref('rating_rating_pivot_view_customer')})
                ]"/>
        <field name="view_mode">pivot</field>
    </record>

    <record model="ir.actions.act_window" id="rating_rating_report_action_destinator">
        <field name="name">Customer evaluation</field>
        <field name="res_model">rating.rating</field>
        <field name="domain">[
            ('res_model', '=', 'sochepress.customer.request.line')]
        </field>
        <field name="view_ids" eval="[(5, 0, 0),
                (0, 0, {'view_mode': 'pivot', 'view_id': ref('rating_rating_pivot_view_destinator')})
                ]"/>
        <field name="view_mode">pivot</field>
    </record>
</odoo>
