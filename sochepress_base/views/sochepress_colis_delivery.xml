<odoo>
    <!--tree-->
    <record id="view_sochepress_colis_delivery_tree" model="ir.ui.view">
        <field name="name">sochepress.colis.delivery.tree</field>
        <field name="model">sochepress.colis.delivery</field>
        <field name="arch" type="xml">
            <tree default_order="create_date desc">
                <field name="active" invisible="1"/>
                <field name="name"/>
                <field name="code"/>
                <field name="create_date" invisible="1"/>
            </tree>
        </field>
    </record>
    <!--search-->

    <!--form-->
    <record id="view_sochepress_colis_delivery_form" model="ir.ui.view">
        <field name="name">sochepress.colis.delivery.form</field>
        <field name="model">sochepress.colis.delivery</field>
        <field name="arch" type="xml">
            <form string="Comments">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="active" invisible="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--action-->

    <record id="soch_colis_delivery_action" model="ir.actions.act_window">
        <field name="name">Comments</field>
        <field name="res_model">sochepress.colis.delivery</field>
        <field name="view_mode">tree,form</field>
        <!--        <field name="context">{'default_delivery_delay_reason_id': ref('sochepress_base.motif_aucun')}</field>-->
    </record>


</odoo>
