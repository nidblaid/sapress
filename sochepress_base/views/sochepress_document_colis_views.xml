<odoo>
    <!--tree-->
    <record id="view_sochepress_document_colis_tree" model="ir.ui.view">
        <field name="name">sochepress.document.colis.tree</field>
        <field name="model">sochepress.document.colis</field>
        <field name="arch" type="xml">
            <tree default_order="create_date desc">
                <field name="name"/>
                <field name="colis_id"/>
                <field name="document_type_id"/>
                <field name="create_date" invisible="1"/>
                <field name="ref_doc"/>
            </tree>
        </field>
    </record>
    <!--search-->

    <!--form-->
    <record id="view_sochepress_document_colis_form" model="ir.ui.view">
        <field name="name">sochepress.document.colis.form</field>
        <field name="model">sochepress.document.colis</field>
        <field name="arch" type="xml">
            <form string="Document Colis">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="colis_id" required="1"/>
                        </group>
                        <group>
                            <field name="document_type_id" required="1"/>
                            <field name="ref_doc" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="form_document" model="ir.ui.view">
        <field name="name">sochepress.document.colis.form</field>
        <field name="model">sochepress.document.colis</field>
        <field name="arch" type="xml">
            <form string="Document Colis">
                <sheet>
                    <group>
                        <group>
                            <!--                                                        <field name="name"/>-->
                            <field name="document_type_id" required="1"/>
                        </group>
                        <group>
                            <field name="ref_doc" required="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--action-->

    <record id="sls_document_colis_action" model="ir.actions.act_window">
        <field name="name">Document Colis</field>
        <field name="res_model">sochepress.document.colis</field>
        <field name="view_mode">tree,form</field>
        <!--        <field name="context">{'default_delivery_delay_reason_id': ref('sochepress_base.motif_aucun')}</field>-->
    </record>


</odoo>
