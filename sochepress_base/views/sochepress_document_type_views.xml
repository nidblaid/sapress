<odoo>
    <!--tree-->
    <record id="view_sochepress_document_type_tree" model="ir.ui.view">
        <field name="name">sochepress.document.type.tree</field>
        <field name="model">sochepress.document.type</field>
        <field name="arch" type="xml">
            <tree default_order="create_date desc">
                <field name="active" invisible="1"/>
                <field name="name"/>
                <field name="return_type"/>
                <field name="description"/>
                <field name="create_date" invisible="1"/>
            </tree>
        </field>
    </record>
    <!--search-->

    <!--form-->
    <record id="view_sochepress_document_type_form" model="ir.ui.view">
        <field name="name">sochepress.document.type.form</field>
        <field name="model">sochepress.document.type</field>
        <field name="arch" type="xml">
            <form string="Document Type">
                <sheet>
                    <group>
                        <group>
                            <field name="name" required="1"/>
                            <field name="description"/>
                        </group>
                        <group>
                            <field name="return_type"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!--action-->

    <record id="sls_document_type_action" model="ir.actions.act_window">
        <field name="name">Document Type</field>
        <field name="res_model">sochepress.document.type</field>
        <field name="view_mode">tree,form</field>
        <!--        <field name="context">{'default_delivery_delay_reason_id': ref('sochepress_base.motif_aucun')}</field>-->
    </record>


</odoo>
