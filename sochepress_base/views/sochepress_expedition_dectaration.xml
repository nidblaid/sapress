<odoo>
    <!--tree-->
    <record id="view_sochepress_declaration_tree" model="ir.ui.view">
        <field name="name">sochepress.declarationtree</field>
        <field name="model">sochepress.declaration</field>
        <field name="arch" type="xml">
            <tree create="0" duplicate="0" default_order="create_date desc">
                <field name="name"/>
                <field name="request_id"/>
                <field name="customer_id"/>
                <!--                <field name="expeditor_id"/>-->
                <field name="destinator_id"/>
                <field name="return_fund" invisible="1"/>
                <field name="sum_in_number" invisible="1"/>
                <field name="planned_delivery_min_date"/>
                <field name="planned_delivery_max_date"/>
                <field name="create_date" invisible="1"/>
                <field name="colis_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>
    <!--search-->

    <!--form-->
    <record id="view_sochepress_declaration_form" model="ir.ui.view">
        <field name="name">sochepress.declaration.form</field>
        <field name="model">sochepress.declaration</field>
        <field name="arch" type="xml">
            <form string="Payment multi company">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <!--                        <button string="Tracking"-->
                        <!--                                type="object"-->
                        <!--                                name="action_view_tracking"-->
                        <!--                                class="oe_stat_button"-->
                        <!--                                icon="fa-arrows-v"-->
                        <!--                        />-->

                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1" force_save="1"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="customer_id"/>
                            <field name="request_id"/>
                            <!--                            <field name="expeditor_id"/>-->

                            <!--                            <field name="return_fund"/>-->
                            <!--                            <field name="sum_in_number"/>-->
                            <field name="planned_delivery_min_date"/>
                        </group>
                        <group>
                            <field name="destinator_id"/>
                            <field name="planned_delivery_max_date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Colis">
                            <field name="colis_ids" widget="one2many_list"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!--action-->

    <record id="sochepress_declaration_action" model="ir.actions.act_window">
        <field name="name">Sochepress declaration</field>
        <field name="res_model">sochepress.declaration</field>
        <field name="view_mode">tree,form</field>
    </record>


</odoo>
