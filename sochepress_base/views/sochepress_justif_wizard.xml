<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="sochepress_justif_wizard_form" model="ir.ui.view">
            <field name="name">sochepress.justif.wizard.form</field>
            <field name="model">sochepress.justif.wizard</field>
            <field name="arch" type="xml">
                <form string="Return Colis">
                    <sheet>
                        <field name="colis_id" invisible="1"/>
                        <group col="8" colspan="8">
                            <field nolabel='1' name="line_ids" widget="one2many" string="Justifications"
                                   context="{'default_colis_id': colis_id}">
                                <tree>
                                    <field name="doc_id"/>
                                </tree>
                                <form>
                                    <group>
                                        <field name="name" invisible="1"/>
                                        <field name="colis_id" invisible="1"/>
                                        <field name="doc_id" options="{'no_create': True, 'no_edit': True}"
                                               required="1"/>
                                        <field name="justif" filename="name" widget="image" required="1"/>
                                    </group>
                                </form>
                            </field>
                        </group>
                    </sheet>
                    <footer>
                        <button string="Confirmer" type="object" class="btn-primary" name="confirmer"/>
                        <button string="Pass" type="object" class="btn btn-secondary" name="continue_pass"
                                invisible="1"/>
                        <button string="Cancel" class="btn btn-secondary" readonly="1" invisible="1"
                                confirm="Si vous cliquer sur Annuler, le colis ne sera pas livrÃ©." special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
