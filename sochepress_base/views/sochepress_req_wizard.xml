<?xml version="1.0" encoding="UTF-8"?>
<odoo>

        <record id="sochepress_req_wizard_form" model="ir.ui.view">
            <field name="name">sochepress.req.wiz.form</field>
            <field name="model">sochepress.req.wiz</field>
            <field name="arch" type="xml">
                <form string="Req">
                    <group>
                         <group>
                        <field name="customer_id" domain="[('customer_rank', '>', 0)]"/>
                        <field name="type"/>
                        <field name="name" invisible="1"/>
                        <!--                        <field name="data" filename="name" readonly="1"/>-->
                        <field name="canevas_name" invisible="1"/>
                        <field name="cavenas" filename="canevas_name"/>
                    </group>
                    <group>
                        <field class="alert-danger" name="errors" attrs="{'invisible': [('errors', '=', False)]}"
                               readonly="1"/>
                    </group>
                    <group>
                        <field class="alert-warning" name="warning" attrs="{'invisible': [('warning', '=', False)]}"
                               readonly="1"/>
                    </group>
                    </group>

                    <footer>
                        <button string="Generate canevas" type="object" class="btn-primary" name="generate_canevas"/>
                        <button string="Test" type="object" class="btn-primary" name="test_import"/>
                        <button string="Import" type="object" class="btn-primary" name="import_request"/>
                        <button string="Cancel" class="btn btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
        <act_window
            id="request_import_action"
            name="Import Requests"
            res_model="sochepress.req.wiz"
            view_mode="form"
            view_id="sochepress_req_wizard_form"
            target="new"
        />

</odoo>
